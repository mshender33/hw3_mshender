    <div class="content">
        <h1>Add a New Place</h1>
        <div class="form-container">
            <%= form_with model: @place, local: true do |f| %>
              <div>
                <label for="place_name">Place Name</label>
                <%= f.text_field :name, required: true %>
              </div>
              <div>
                <h2>Entries</h2>
                <%= f.fields_for :entries do |entry_fields| %>
                  <div>
                    <label for="entry_title">Entry Title</label>
                    <%= entry_fields.text_field :title, required: true %>
                  </div>
                  <div>
                    <label for="entry_content">Entry Content</label>
                    <%= entry_fields.text_area :content, required: true %>
                  </div>
                <% end %>
              </div>
              <div>
                <%= f.submit "Create Place", class: "button" %>
              </div>
            <% end %>
        </div>
    </div>
</body>
</html>
